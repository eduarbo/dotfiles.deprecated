#!/usr/bin/env zsh
source ${0:A:h}/../../deploy

# Dependencies

common_deps=(
  the_silver_searcher
  ripgrep
  sqlite
)

brew_deps=(
  coreutils
  gnu-tar
  cmake
  llvm
)

dnf_deps=(
  make
  emacs
)

cask_deps=(
  font-hack
  font-hack-nerd-font
  font-iosevka
  font-iosevka-nerd-font
)

install() {
  case $(_os) in
    macos)
      brew tap d12frosted/emacs-plus
      brew install emacs-plus --without-spacemacs-icon --with-modern-icon
      brew install ${common_deps[@]} ${brew_deps[@]}
      brew cask install ${cask_deps[@]}
      ;;
    fedora)
      sudo dnf install -y ${common_deps[@]} ${dnf_deps[@]}
      ;;
  esac

  # Clone and setup doom-emacs
  _ensure_repo hlissner/doom-emacs ~/.emacs.d develop

  cd ~/.emacs.d && YES=1 make install
}

update() {
  cd ~/.emacs.d && YES=1 make update
}

link() {
  mklink doom $XDG_CONFIG_HOME
}

clean() {
  rm -rfv "$XDG_CONFIG_HOME/doom" "~/.emacs.d"
}

init "$@"
