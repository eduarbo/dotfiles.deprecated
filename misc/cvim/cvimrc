" to make this work first time in cVim:
" 1. :settings
" 2. paste this into `cVimrc` text field:
"   let configpath = "/Users/eduarbo/.config/cvimrc"
"   set localconfig
" 3. click `Save`
" 4. :source

let mapleader = ","

" Settings
set sortlinkhints
set nohud
set nosmoothscroll
set noautofocus
set typelinkhints
set nodimhintcharacters
set defaultnewtabpage

let searchlimit = 40
let typelinkhintsdelay = 0
let hintcharacters = "fdsajkl;weruiogh"
let searchlimit = 30
let scrollstep = 70
let barposition = "top"

let blacklists = ["https://devdocs.io/*", "https://mail.google.com/*", "*://mail.google.com/*", "@https://mail.google.com/mail/*"]
let searchengine twitter = "https://twitter.com/search?q=%s"
let searchengine docs = "http://devdocs.io/#q=%s"
let searchengine mdn = "https://developer.mozilla.org/en-US/search?q=%s"
let searchengine subreddit = ["https://www.reddit.com", "https://www.reddit.com/r/%s"]

let completionengines = ["google", "amazon", "imdb", "duckduckgo", "wikipedia", "youtube", "google-image", "twitter", "docs"]

" alias ':r' to ':tabnew reddit'
command r tabnew reddit

" Create a shortcut for search engines. For example, typing ':tabnew g example'
" would act the same way as ':tabnew google example'
let searchalias a = "amazon"
let searchalias d = "docs"
let searchalias g = "google"
let searchalias i = "imdb"
let searchalias m = "mdn"
let searchalias p = "google-image"
let searchalias r = "subreddit"
let searchalias t = "twitter"
let searchalias u = "urbandictionary"
let searchalias w = "wikipedia"
let searchalias y = "youtube"

" Mappings
map ; openCommandBar
map h previousTab
map l nextTab
map m* setMark
map u lastClosedTab
map xx closeTab
map gq :restore<space>
map ? openLinkSearchBar
map B :Bookmarks!
map ,, :buffer<Space>

map <Leader>r reloadTabUncached
map <Leader>x :restore<Space>

map <C-.> rootFrame
map <C-d> scrollPageDown
map <C-u> scrollPageUp
imap <C-w> deleteWord

map <Leader>s :source<CR>

map <Leader>f :open! http://www.facebook.com<CR>
map <Leader>F :open http://www.facebook.com<CR>
map <Leader>n :open! http://news.google.com<CR>
map <Leader>cl :open! chrome://chrome/settings/clearBrowserData<CR>
map <Leader>ce :chrome! extensions<CR>
map <Leader>cd :chrome! downloads<CR>
map <Leader>ch :chrome! history<CR>
map <Leader>cf :chrome! flags<CR>

" Script hints
echo(link) -> {{
  alert(link.href);
}}
map <C-f> createScriptHint(echo)

let configpath = "/Users/eduarbo/.config/cvimrc"
set localconfig
