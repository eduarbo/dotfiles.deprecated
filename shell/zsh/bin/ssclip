#!/usr/bin/env bash
# A script that takes a screenshot and stores it in the clipboard
tmp=$(mktemp)
if maim -us >"$tmp"; then
  xclip -selection clipboard -t image/png "$tmp" && \
    ding && \
    notify-send "Screenshot saved"
else
  notify-send -u low "Screenshot aborted"
  ding error
fi
rm -f "$tmp"
